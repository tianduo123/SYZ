/* pages/home/home.wxss */
page{
  box-sizing: border-box;
  padding-bottom: 100rpx
}
.getU{
  width: 100%;
  background: rgba(0,0,0,.6);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 99
}
.getU_wrap{
  width: 80%;
  height: 800rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around
}
.getU_t{
  width:100%;
  height: 80rpx;
  border-bottom: 1px solid #eeeeee;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666666
}
.getU_c{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}
.getU_btn{
  width: 400rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #33cc00;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 30rpx
}
.swiper{
  width: 100%;
  height: 400rpx
}
.classify{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #eeeeee
}
.class_item{
  font-size: 28rpx;
  color: #FF6600;
  border-bottom: 5rpx solid #FF6600;
  height: 80rpx;
  line-height: 80rpx
}
.class_item2{
  font-size: 28rpx;
  color: #666666;
  height: 80rpx;
  line-height: 80rpx
}
.goods_wrap{
  width:100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap
}
.goods_item{
  box-sizing: border-box;
  padding: 10rpx;
  width: 49.5%;
  height: 500rpx;
  background: #eeeeee;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.name{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;      /* 可以显示的行数，超出部分用...表示*/
  -webkit-box-orient: vertical;
}
/* pages/cut/cut.wxss */
page{
  box-sizing: border-box;
  padding-bottom: 50rpx;
}
.swiper{
  width: 100%;
  height: 400rpx
}
.goodsList{
  width: 95%;
  margin: 20rpx auto 100rpx;
  /* border: 1px solid #FF9933; */
  border-radius: 10rpx;
  box-sizing: border-box;
  padding-bottom: 30rpx
}
.title{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(to right,#FF6600,#FF9933);
  border-radius: 10rpx;
  margin-bottom: 15rpx
}
.wrap{
  display: flex;
  align-items: center;
  width: 30%;
  justify-content: space-around
}
.goods_item{
  width: 100%;
  display: flex;
  height: 230rpx;
  border-bottom: 1px solid #eee;
  /* margin: 15rpx 0; */
  align-items: center

}
.item_l{
  width: 200rpx;
  height: 200rpx;
}
.item_r{
  width: 70%;
  margin-left: 15rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}
.goods_name{
  height: 130rpx
}
.payInfo{
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.kan{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #CC0000;
  color: #fff
}
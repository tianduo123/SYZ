/* pages/cut/cut.wxss */
page{
  box-sizing: border-box;
  padding-bottom: 50rpx;
}
.swiper{
  width: 100%;
  height: 400rpx
}
.goodsList{
  width: 95%;
  margin: 20rpx auto 100rpx;
  /* border: 1px solid #FF9933; */
  border-radius: 10rpx;
  box-sizing: border-box;
  padding-bottom: 30rpx
}
.title{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(to right,#FF6600,#FF9933);
  border-radius: 10rpx;
  margin-bottom: 15rpx
}
.wrap{
  display: flex;
  align-items: center;
  width: 30%;
  justify-content: space-around
}
.goods_item{
  width: 100%;
  display: flex;
  height: 230rpx;
  border-bottom: 1px solid #eee;
  /* margin: 15rpx 0; */
  align-items: center

}
.item_l{
  width: 200rpx;
  height: 200rpx;
}
.item_r{
  width: 70%;
  height: 100%;
  margin-left: 15rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.goods_name{
/* height: 130rpx; */
text-overflow: ellipsis; 
overflow : hidden;
display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;
}
.payInfo{
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.kan{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #CC0000;
  color: #fff
}



/* 授权蒙层样式 */
.getU{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 99
}
.getU_wrap{
  width: 80%;
  height: 800rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around
}
.getU_t{
  width:100%;
  height: 80rpx;
  border-bottom: 1px solid #eeeeee;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666666
}
.getU_c{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}
.getU_btn{
  width: 400rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #33cc00;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 30rpx
}
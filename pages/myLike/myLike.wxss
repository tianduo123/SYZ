/* pages/myLike/myLike.wxss */
page{
  background: #eeeeee
}
.item{
  width: 95%;
  height: 250rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx auto;
  border-radius: 20rpx
}
.item_img{
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.item_info{
  width: 70%;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-around
}
.name{
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.price{
  display: flex;
  align-items: center
}
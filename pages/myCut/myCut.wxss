/* pages/goods_list/goods_list.wxss */
page{
  background: #eeeeee
}
.top{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  background: #fff
}
.top_l{
  border-bottom: 5rpx solid #CC0000;
  height: 50rpx;
  line-height: 50rpx
}
.top_r{
  /* border-bottom: 5rpx solid #CC0000; */
  height: 50rpx;
  line-height: 50rpx
}
.order-item{
  width: 95%;
  height: 260rpx;
  border-radius: 20rpx;
  background: #fff;
  margin: 20rpx auto;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.item_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.item_info{
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.item_info_title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx
}
.item_info_price{
  /* text-align: right; */
  display: flex;
  color: #666666;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 8rpx
}
.item_info_orderNum{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx
}
.item_info_time{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666
}
.empty{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  font-size: 32rpx;
}
.empty>image{
  width: 100rpx;
  height: 100rpx;
  margin: 80rpx auto 40rpx
}
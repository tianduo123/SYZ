/* pages/cut_detail/cut_detail.wxss */
page{
  background: #FF3333
}
.wrap{
  width: 90%;
  margin: 30rpx auto;
  /* height: 500rpx; */
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 10rpx
}
.goods_info{
  width: 95%;
  height: 230rpx;
  background: #eee;
  display: flex;
  align-items: center;
  margin: auto;
  border-radius: 10rpx;
  justify-content: space-around
}
.info_l{
  width: 200rpx;
  height: 200rpx;
}
.info_r{
  width: 60%;
  height: 200rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.name{
  font-size: 28rpx;
}
.time{
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center
}
.time_wrap{
  width: 40rpx;
  height: 40rpx;
  background: #666;
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: space-around
}
.cut{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #FFFF33;
  border-radius: 50rpx;
  font-weight: bold;
  color: #FF3333;
  font-size: 32rpx;
  margin: 30rpx auto;
  box-shadow: 0rpx 10rpx 5rpx #FFCC33
}
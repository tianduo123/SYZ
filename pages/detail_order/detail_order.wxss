/* pages/detail_order/detail_order.wxss */
.top{
  width: 100%;
  height: 280rpx;
  background: linear-gradient(#fe9d4b,#fc614e);
  box-sizing: border-box;
  padding-top: 100rpx;
  margin-bottom: 100rpx
}
.goods_info{
  width: 80%;
  height: 250rpx;
  background: #ffffff;
  border-radius: 15rpx;
  box-shadow: 5rpx 5rpx 3rpx #eeeeee;
  margin-top: 100rpx;
  margin:  auto;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.goods_info_img{
  width: 200rpx;
  height: 200rpx
}
.goods_info_info{
  width: 50%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.name{
   font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;      /* 可以显示的行数，超出部分用...表示*/
  -webkit-box-orient: vertical;
}
.price{
  font-size: 32rpx;
  color: #CC0000
}
.img{
  text-align: center
}
.userInfo{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 60rpx
}
.userInfo_item{
  display: flex;
  align-items: center;
  flex-direction: column
}
.userInfo_item>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx
}
.userInfo_item>view{
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  width: 120rpx;
  white-space: nowrap;
}
.more{
  width: 85%;
  height: 80rpx;
  border-radius: 50rpx;
  background: #f60900;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #ffffff;
  margin: 30rpx auto
}
.check{
  width: 85%;
  height: 80rpx;
  border-radius: 50rpx;
  border: 1px solid #f60900;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #f60900;
  text-align: center;
  margin: auto
}
.rule{
  box-sizing: border-box;
  padding: 20rpx;
  margin-top: 50rpx
}